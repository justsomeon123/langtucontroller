# Print an optspec for argparse to handle cmd's options that are independent of any subcommand.
function __fish_langtuctl_global_optspecs
	string join \n h/help V/version
end

function __fish_langtuctl_needs_command
	# Figure out if the current invocation already has a command.
	set -l cmd (commandline -opc)
	set -e cmd[1]
	argparse -s (__fish_langtuctl_global_optspecs) -- $cmd 2>/dev/null
	or return
	if set -q argv[1]
		# Also print the command, so this can be used to figure out what it is.
		echo $argv[1]
		return 1
	end
	return 0
end

function __fish_langtuctl_using_subcommand
	set -l cmd (__fish_langtuctl_needs_command)
	test -z "$cmd"
	and return 1
	contains -- $cmd[1] $argv
end

complete -c langtuctl -n "__fish_langtuctl_needs_command" -s h -l help -d 'Print help'
complete -c langtuctl -n "__fish_langtuctl_needs_command" -s V -l version -d 'Print version'
complete -c langtuctl -n "__fish_langtuctl_needs_command" -f -a "rainbow"
complete -c langtuctl -n "__fish_langtuctl_needs_command" -f -a "color"
complete -c langtuctl -n "__fish_langtuctl_needs_command" -f -a "completion"
complete -c langtuctl -n "__fish_langtuctl_needs_command" -f -a "help" -d 'Print this message or the help of the given subcommand(s)'
complete -c langtuctl -n "__fish_langtuctl_using_subcommand rainbow" -l direction -r
complete -c langtuctl -n "__fish_langtuctl_using_subcommand rainbow" -l speed -r
complete -c langtuctl -n "__fish_langtuctl_using_subcommand rainbow" -l brightness -r
complete -c langtuctl -n "__fish_langtuctl_using_subcommand rainbow" -s h -l help -d 'Print help'
complete -c langtuctl -n "__fish_langtuctl_using_subcommand color" -l red -r
complete -c langtuctl -n "__fish_langtuctl_using_subcommand color" -l green -r
complete -c langtuctl -n "__fish_langtuctl_using_subcommand color" -l blue -r
complete -c langtuctl -n "__fish_langtuctl_using_subcommand color" -l brightness -r
complete -c langtuctl -n "__fish_langtuctl_using_subcommand color" -s h -l help -d 'Print help'
complete -c langtuctl -n "__fish_langtuctl_using_subcommand completion" -s h -l help -d 'Print help'
complete -c langtuctl -n "__fish_langtuctl_using_subcommand help; and not __fish_seen_subcommand_from rainbow color completion help" -f -a "rainbow"
complete -c langtuctl -n "__fish_langtuctl_using_subcommand help; and not __fish_seen_subcommand_from rainbow color completion help" -f -a "color"
complete -c langtuctl -n "__fish_langtuctl_using_subcommand help; and not __fish_seen_subcommand_from rainbow color completion help" -f -a "completion"
complete -c langtuctl -n "__fish_langtuctl_using_subcommand help; and not __fish_seen_subcommand_from rainbow color completion help" -f -a "help" -d 'Print this message or the help of the given subcommand(s)'
